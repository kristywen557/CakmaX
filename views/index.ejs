    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const params = new URLSearchParams(window.location.search);
            if (params.has('toastr')) {
                const toastrMessage = params.get('toastr');
                const toastrDiv = document.createElement('div');
                toastrDiv.className = 'toastr';
                toastrDiv.textContent = toastrMessage;
                document.body.appendChild(toastrDiv);
                const newUrl = window.location.pathname;
                window.history.replaceState({}, '', newUrl);
                setTimeout(() => {
                    toastrDiv.style.opacity = "0%";
                }, 5000);
            }
        }); 
    </script>
